{% extends 'layout.twig' %}

{% block title %}
	Commentaires en attente de validation
{% endblock title %}

{% block content %}
	
	{% if comments is empty %}
		<p>Il n'y a pas de commentaire(s) en attente de validation.</p>
	{% endif %}
	
	{% for comment in comments %}
		
		<p class="mt-5">Commentaire du {{ comment.c_date }}, Ã  {{ comment.c_hour }}h{{ comment.c_minute }} - par {{ comment.author }} :</p>
		{{ comment.text }}
		
		<p><a class="btn btn-danger mt-sm-4 mt-2" href="index.php?controller=comment&action=delete&id={{ comment.id }}&token={{ csrf_token() }}" onclick="return confirm('Confirmer la suppression ?')">Supprimer</a>
			<a class="btn btn-success mt-sm-4 mt-2" href="index.php?controller=comment&action=validate&id={{ comment.id }}&token={{ csrf_token() }}">Valider et publier</a></p>
	
	{% endfor %}

{% endblock content %}