{% extends 'layout.twig' %}

{% block title %}
	Article : {{ post.title }}
{% endblock title %}

{% block content %}
	
	{% if session.role is same as ('admin') or session.role is same as ('publisher') %}
		<p><a href="backend/add_form.php">Ajouter un billet </a></p>
	{% endif %}
	
	<h2>Détails et commentaires</h2>
	
	<p>
		Posté le {{ post.post_date }} à {{ post.post_time }}
		{% if post.update_date %}
			(dernière modification le {{ post.update_date }})
		{% endif %}
		par : {{ post.author }}
	</p>
	
	<p> {{ post.message }} </p>
	
	<h3>Commentaires :</h3>
	
	{% for comment in comments %}
		
		<p>Commentaire du {{ comment.c_date }}, à {{ comment.c_hour }}h{{ comment.c_minute }} - par {{ comment.author }} :</p>
		{{ comment.text }}
		
		{% if session.role is same as ('admin') or session.role is same as ('publisher') %}
			<p><a href="index.php?delete_comment={{ comment.id }}">Supprimer ce commentaire</a></p>
		{% endif %}
	
	{% endfor %}
	
	
	{% if session.user_id %}
		<h4>Ajouter un commentaire</h4>
		<form method="post" action="index.php?send_comment={{ comment.id }}">
			<label for="user_comment">Votre commentaire : <br/></label> <textarea name="user_comment" rows="3" cols="80"></textarea> <br/>
			<input type="submit" name="validate_comment"/>
		</form>
	{% endif %}
	
	<p><a href="index.php?p=posts">Retour à la liste des billets</a></p>

{% endblock content %}